<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile - <%= username %></title>
  <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>
  <nav>
    <a href="/spots">All Spots</a>
    <a href="/auth/sign-out">Logout</a>
  </nav>

  <h1>Welcome, <%= username %>!</h1>

  <section>
    <h2>Your Spots</h2>
    <% if (spots.length === 0) { %>
      <p>You have no spots yet.</p>
    <% } else { %>
      <ul>
        <% spots.forEach(spot => { %>
          <li>
            <a href="/spots/<%= spot._id %>"><%= spot.name %></a>
            <form action="/spots/<%= spot._id %>/edit" method="GET">
              <button type="submit">Edit Spot</button>
            </form>
            <form action="/spots/<%= spot._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </section>
</body>
</html>
