<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile - <%= username %></title>
  <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>
  <nav>
    <a href="/spots">All Spots</a>
    <a href="/auth/sign-out">Logout</a>
  </nav>

  <h1>Welcome, <%= username %>!</h1>

  <section>
    <h2>Your Spots</h2>
    <% if (spots.length === 0) { %>
        <p>You have no spots yet.</p>
    <% } else { %>
        <div class="spots-grid">
            <% spots.forEach(spot => { %>
                <a href="/spots/<%= spot._id %>" class="card">
                    <img src="<%= spot.photo || '/images/no-img.png' %>" alt="<%= spot.name %>" class="<%= spot.photo ? '' : 'no-img' %>">
                    <div class="card-info">
                        <div class="name"><%= spot.name %></div>
                        <div class="location"><%= spot.city %>, <%= spot.state %></div>
                    </div>
                </a>
            <% }) %>
        </div>
    <% } %>
</section>
</body>
</html>
